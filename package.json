{
    "name": "@rzyns/temporal-fns",
    "version": "0.1.4",
    "description": "Date utility functions built on the Temporal API",
    "type": "module",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "types": "./dist/index.d.ts"
        }
    },
    "files": ["dist", "README.md", "LICENSE"],
    "publishConfig": {
        "registry": "https://npm.pkg.github.com",
        "access": "public"
    },
    "scripts": {
        "build": "tsc --build tsconfig.src.json",
        "test": "vitest run",
        "test:watch": "vitest",
        "lint": "biome check .",
        "format": "biome format --write .",
        "typecheck": "tsc --build --noEmit",
        "version": "biome format --write package.json && git add package.json",
        "prepare": "lefthook install"
    },
    "packageManager": "pnpm@10.30.1",
    "engines": {
        "node": ">=20"
    },
    "devDependencies": {
        "@biomejs/biome": "^1.9.4",
        "@vitest/coverage-v8": "^3.2.4",
        "lefthook": "^2.1.1",
        "temporal-polyfill": "^0.3.0",
        "temporal-spec": "^0.3.0",
        "typescript": "^5.9.3",
        "vitest": "^3.2.4"
    }
}
